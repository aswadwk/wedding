---
import GenerateInvitation from "../react-pages/GenerateInvitation";
import config from "../config/config";
import "../index.css";
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Primary Meta Tags -->
    <title>Generate Invitation - {config.data.title}</title>
    <meta name="title" content={`Generate Invitation - ${config.data.title}`} />
    <meta
      name="description"
      content="Generate personalized wedding invitation links"
    />

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href={config.data.favicon} />

    <!-- Theme Color -->
    <meta name="theme-color" content="#FDA4AF" />

    <style>
      @import url("https://fonts.googleapis.com/css2?family=Playfair+Display:ital@0;1&display=swap");
    </style>
  </head>
  <body>
    <GenerateInvitation client:load />
  </body>
</html>
